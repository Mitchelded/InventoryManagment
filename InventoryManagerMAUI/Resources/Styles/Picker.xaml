<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Стиль для Picker -->
    <Style TargetType="Picker">
        <!-- Базовый стиль -->
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="TextColor" Value="{StaticResource Black}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="10" />
        <!-- <Setter Property="BorderColor" Value="{StaticResource LightGray}" /> -->
        <!-- <Setter Property="CornerRadius" Value="5" /> -->
        <!-- <Setter Property="Padding" Value="10" /> -->

        <!-- Стиль при фокусе -->
        <Style.Triggers>
            <Trigger TargetType="Picker" Property="IsFocused" Value="True">
                <!-- <Setter Property="BorderColor" Value="{StaticResource PrimaryBrush}" /> -->
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="{StaticResource SecondaryBrush}" Radius="10" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>