<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:InventoryManagerMAUI.ViewModels.ViewModel"
             x:Class="InventoryManagerMAUI.View.RoleView" Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModel:AdminViewModel />
    </ContentPage.BindingContext>


    <VerticalStackLayout>
        <Label Text="Роли" VerticalOptions="Center" FontSize="Title" Margin="10" />
        <Button Clicked="BtnAdd_Clicked" Text="Новая роль" x:Name="BtnAdd" Margin="10" HorizontalOptions="End"/>
        
            <ListView
                            SelectedItem="{Binding BindingContext.SelectedRoleItem,
                                        Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                            Margin="10" Grid.Column="1" Grid.Row="0"
                            ItemsSource="{Binding CollectionRole}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="10,*,*,*,*">
                            <Label Text="{Binding RoleID}" Grid.Column="0" />
                            <Label Text="{Binding Name}" Grid.Column="1" />
                            <Label Text="{Binding Description}" Grid.Column="2" />
                                <Button Grid.Column="3" Width="25" Text="Удалить" Style="{StaticResource DangerButtonStyle}"
                                                    Command="{Binding BindingContext.DeleteRoleCommand,
                                                        Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                    CommandParameter="{Binding BindingContext.SelectedRoleItem ,Source={RelativeSource AncestorType={x:Type ContentPage}}}" />
                            <Button Text="Редактировать" Grid.Column="4" Width="25"
                                                    Clicked="RoleEditButton_OnClicked" Style="{StaticResource WarningButtonStyle}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>