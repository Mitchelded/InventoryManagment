            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>


        <Label Content="FIO" Grid.Column="0" Grid.Row="1"/>
        <Label Content="Gender" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Birthday" Grid.Column="2" Grid.Row="1"/>
        <Label Content="HaveAChild" Grid.Column="3" Grid.Row="1"/>
        <Label Content="Scholarship" Grid.Column="4" Grid.Row="1"/>
        <Label Content="ScholarshipPurpose" Grid.Column="5" Grid.Row="1"/>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <ComboBox Name="Faculty"/>
            <ComboBox Name="Department"/>
            <ComboBox Name="Course"/>
