<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:InventoryManagerMAUI.ViewModels.ViewModel"
             x:Class="InventoryManagerMAUI.View.OrdersManagementView">
    <ContentPage.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="5,0" />
        </Style>
        <Style x:Key="StatusBadgeStyle" TargetType="Label">
            <Setter Property="Padding" Value="5,2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <model:OrdersManagementViewModel />
    </ContentPage.BindingContext>


    <Grid>
        <!-- Main Content -->
            <StackLayout Grid.Column="1" BackgroundColor="{DynamicResource Background}" Padding="20" Spacing="20">
                <StackLayout>
                    <Label Text="Управление заказами" FontSize="24" FontAttributes="Bold" />
                    <Label Text="Управляйте и отслеживайте все заказы в одном месте" FontSize="14" TextColor="Gray" />
                </StackLayout>

                <Button Text="Новый заказ" Style="{StaticResource PrimaryButtonStyle}" x:Name="AddOrderButton" Clicked="AddOrderButton_OnClicked"/>

                <!-- Filters -->
                <Grid ColumnSpacing="10" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <DatePicker Grid.Column="0" Date="{Binding StartDate, Mode=TwoWay}"/>
                    <DatePicker Grid.Column="1" Date="{Binding EndDate, Mode=TwoWay}"/>
                    <Entry Placeholder="Поиск клиента..." Grid.Column="2" Text="{Binding FilterName}" />
                </Grid>

                <!-- Orders Table -->
            <ListView ItemsSource="{Binding Collection}"
                          SelectedItem="{Binding BindingContext.SelectedItem, 
                        Source={RelativeSource AncestorType={x:Type ContentPage}}, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            
                                <Grid ColumnDefinitions="15,*,*,*,*,*,*">
                                    <Label Text="{Binding OrderID}" Grid.Column="0" />
                                    <Label Text="{Binding Order.CustomerName}" Grid.Column="1"/>
                                    <Label Text="{Binding Order.OrderDate}" Grid.Column="2"/>
                                    <Label Text="{Binding Order.TotalCost}" Grid.Column="3"/>


                                    <Button Style="{StaticResource PrimaryButtonStyle}" Grid.Column="4" Text="Детали" Clicked="ViewDetailBtn_OnClicked" x:Name="ViewDetailBtn"
Command="{Binding BindingContext.DetailCommand, 
Source={RelativeSource AncestorType={x:Type ContentPage}}}"/>
                                    <Button Style="{StaticResource SuccessButtonStyle}" Grid.Column="5" Text="Редактировать" Clicked="Button_OnClicked"/>
                                    <Button Style="{StaticResource DangerButtonStyle}" Text="Удалить" Grid.Column="6" 
Command="{Binding BindingContext.DeleteCommand, 
Source={RelativeSource AncestorType={x:Type ContentPage}}}"
CommandParameter="{Binding BindingContext.SelectedItem, 
Source={RelativeSource AncestorType={x:Type ContentPage}}, Mode=TwoWay}" />

                                </Grid>
                            
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        </Grid>
</ContentPage>