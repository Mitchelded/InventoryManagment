<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="InventoryManagerMAUI.ViewModels.Popups.AddViews.AddWarehousePopup"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <ScrollView MaximumWidthRequest="450" MaximumHeightRequest="150">
        <Grid ColumnDefinitions="195,255" RowDefinitions="65,85">   
            <Entry Margin="10" Grid.Column="0" Grid.Row="0" Placeholder="Введите новое имя" Text="{Binding Name}"/>
            <Entry Margin="10" Grid.Column="1" Grid.Row="0" Placeholder="Введите новое местоположение" Text="{Binding Location}"/>
            <Button Margin="10" Grid.Column="0" Grid.Row="1"  Text="Добавить"
                    Command="{Binding AddWarehouseCommand}"/>
            <Button Margin="10" Grid.Column="1" Grid.Row="1"  Clicked="CloseButton_Click" Style="{StaticResource WarningButtonStyle}" Text="Отмена"/>
        </Grid>
    </ScrollView>

</toolkit:Popup>