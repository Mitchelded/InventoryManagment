<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="InventoryManagerMAUI.ViewModels.Popups.EditViews.EditCategoryPopup"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <ScrollView MaximumWidthRequest="450" MaximumHeightRequest="250">
        <Grid ColumnDefinitions="*,*" RowDefinitions="75,75">
            <Entry Margin="10" Grid.Column="0" Grid.Row="0" Placeholder="Введите новое имя" Text="{Binding Name}"/>
            <Entry Margin="10" Grid.Column="1" Grid.Row="0" Placeholder="Введите новое описание" Text="{Binding Description}"/>
            <Button Margin="10" Grid.Column="0" Grid.Row="1" Text="Сохранить"
                    Command="{Binding UpdateCategoryCommand}"
                    CommandParameter="{Binding SelectedCategoryItem}"/>
            <Button Margin="10" Grid.Column="1" Grid.Row="1"  Clicked="CloseButton_Click" Style="{StaticResource WarningButtonStyle}" Text="Отмена"/>
        </Grid>
    </ScrollView>

</toolkit:Popup>