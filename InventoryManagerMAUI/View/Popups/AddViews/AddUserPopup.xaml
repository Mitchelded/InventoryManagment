<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="InventoryManagerMAUI.ViewModels.Popups.AddViews.AddUserPopup"
               CanBeDismissedByTappingOutsideOfPopup="False">


    <ScrollView MaximumWidthRequest="450" MaximumHeightRequest="350">
        <Grid ColumnDefinitions="*,*" RowDefinitions="75,75,75,75">
            <Entry Margin="10" Grid.Column="0" Grid.Row="0" Placeholder="Введите имя пользователя" Text="{Binding UserName}"/>
            <Entry Margin="10" Grid.Column="1" Grid.Row="0" Placeholder="Введите адрес электронной почты" Text="{Binding Email}"/>
            <Entry Margin="10" Grid.Column="0" Grid.Row="1" Placeholder="Введите полное имя" Text="{Binding FullName}"/>
            <Picker Margin="10" Grid.Column="1" Grid.Row="1" Title="Отделение"
                    ItemsSource="{Binding CollectionDepartment}" 
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedDepartmentItem}"/>

            <Entry Margin="10" Placeholder="Введите пароль" Grid.Row="2" Grid.ColumnSpan="2" Text="{Binding Password}"/>

            <Button Margin="10" Grid.Column="0" Grid.Row="3"  Text="Добавить"
                    Command="{Binding AddUserCommand}"/>
            <Button Margin="10" Grid.Column="1" Grid.Row="3"  Clicked="CloseButton_Click" Style="{StaticResource WarningButtonStyle}" Text="Отмена"/>
        </Grid>
    </ScrollView>

</toolkit:Popup>