<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:InventoryManagerMAUI.ViewModels.ViewModel"
             xmlns:view="clr-namespace:InventoryManagerMAUI.View"
             x:Class="InventoryManagerMAUI.View.EquipmentMovementView">
    <ContentPage.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="5,0" />
        </Style>
        <Style x:Key="StatusBadgeStyle" TargetType="Label">
            <Setter Property="Padding" Value="5,2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <model:EquipmentMovementViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <ContentView>
            <Grid>
                <!-- Main Content -->
                <StackLayout Grid.Column="1" BackgroundColor="{DynamicResource Background}" Padding="20" Spacing="20">
                    <StackLayout>
                        <Label Text="Движение оборудования" FontSize="24" FontAttributes="Bold" />
                        <Label Text="Отслеживайте и управляйте перемещением оборудования между локациями" FontSize="14" TextColor="Gray" />
                    </StackLayout>

                    <Button Text="Новое движение" Style="{StaticResource PrimaryButtonStyle}"
                    x:Name="AddMovementButton"
                    Clicked="AddMovementButton_OnClicked" />

                    <!-- Filters -->
                    <Grid ColumnSpacing="10" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Entry Placeholder="Поиск по названию оборудования"
                       Grid.Column="0"
                       Text="{Binding FilterName}" />
                        <HorizontalStackLayout Grid.Column="1">
                            <Button Text="Сброс" x:Name="BtnReset" Command="{Binding ResetCommand}"
                            Style="{StaticResource DangerButtonStyle}" />
                        </HorizontalStackLayout>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!-- Заголовки -->
                            <RowDefinition Height="*" />
                            <!-- Список -->
                        </Grid.RowDefinitions>

                        <!-- Заголовки -->
                        <Grid Grid.Row="0" RowDefinitions="*" ColumnDefinitions="25,*,*,*,*,*,*,*">
                            <Label Text="ID" Grid.Column="0" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Оборудование" Grid.Column="1" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Источник склада" Grid.Column="2" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Назначение склада" Grid.Column="3" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Дата перемещения" Grid.Column="4" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Детали" Grid.Column="5" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Редактировать" Grid.Column="6" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="Удалить" Grid.Column="7" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                        </Grid>

                        <!-- Список -->
                        <ListView Grid.Row="1" ItemsSource="{Binding Collection}"
              SelectedItem="{Binding BindingContext.SelectedItem, Source={RelativeSource AncestorType={x:Type ContentPage}}, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid RowDefinitions="*" ColumnDefinitions="25,*,*,*,*,*,*,*">
                                            <Label Text="{Binding EquipmentMovementID}" Grid.Column="0" />
                                            <Label Text="{Binding Equipment.Name}" Grid.Column="1" />
                                            <Label Text="{Binding SourceWarehouse.Name}" Grid.Column="2" />
                                            <Label Text="{Binding DestinationWarehouse.Name}" Grid.Column="3" />
                                            <Label Text="{Binding MovementDate}" Grid.Column="4" />

                                            <Button Style="{StaticResource PrimaryButtonStyle}" Text="Детали" Clicked="ViewDetailBtn_OnClicked" x:Name="ViewDetailBtn" Grid.Column="5" CommandParameter="{Binding}" />
                                            <Button Style="{StaticResource SuccessButtonStyle}" Text="Edit" Grid.Column="6" Clicked="EditBtn_OnClicked" CommandParameter="{Binding}" />
                                            <Button Style="{StaticResource DangerButtonStyle}" Text="Delete" Grid.Column="7" Command="{Binding BindingContext.DeleteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" CommandParameter="{Binding}" />
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>


                </StackLayout>
            </Grid>
        </ContentView>
    </Grid>
</ContentPage>