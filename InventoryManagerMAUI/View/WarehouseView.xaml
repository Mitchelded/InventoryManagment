<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:InventoryManagerMAUI.ViewModels.ViewModel"
             x:Class="InventoryManagerMAUI.View.WarehouseView" Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModel:AdminViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        
        <Label Text="Склады" VerticalOptions="Center" FontSize="Title" Margin="10" />
        <Button Clicked="BtnAdd_Clicked" Text="Новый склад" x:Name="BtnAdd" Margin="10" HorizontalOptions="End" Style="{StaticResource PrimaryButtonStyle}"/>

        <Grid Grid.Column="0" Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Заголовки -->
                <RowDefinition Height="*" />
                <!-- Список -->
            </Grid.RowDefinitions>

            <!-- Заголовки -->
            <Grid Grid.Row="0" ColumnDefinitions="25,*,*,*,*">
                <Label Text="ID" Grid.Column="0" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="Название" Grid.Column="1" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="Расположение" Grid.Column="2" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="Действие" Grid.Column="3" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                <Label Text="Редактирование" Grid.Column="4" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            </Grid>

            <!-- Список -->
            <ListView Grid.Row="1"
              ItemsSource="{Binding CollectionWarehouse}" 
              SelectedItem="{Binding BindingContext.SelectedWarehouseItem,
                                      Source={RelativeSource AncestorType={x:Type ContentPage}}}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="25,*,*,*,*">
                                <Label Text="{Binding WarehouseID}" Grid.Column="0" />
                                <Label Text="{Binding Name}" Grid.Column="1" />
                                <Label Text="{Binding Location}" Grid.Column="2" />
                                <Button Grid.Column="3" Width="25" Text="Удалить" Style="{StaticResource DangerButtonStyle}"
                                Command="{Binding BindingContext.DeleteWarehouseCommand,
                                                Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                CommandParameter="{Binding BindingContext.SelectedWarehouseItem,
                                                        Source={RelativeSource AncestorType={x:Type ContentPage}}}" />
                                <Button Text="Редактировать" Grid.Column="4" Width="25"
                                Clicked="WarehouseEditButton_OnClicked" Style="{StaticResource SuccessButtonStyle}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>



    </VerticalStackLayout>
</ContentPage>