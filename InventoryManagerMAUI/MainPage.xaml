<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="using:InventoryManagerMAUI.ViewModels"
             x:Class="InventoryManagerMAUI.MainPage">
    
    <ContentPage.BindingContext>
        <model:EquipmentStatusViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Test"/>
            <ListView ItemsSource="{Binding EquipmentStatus}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Margin="10,0,0,5">
                            <Entry Text="{Binding IdStatus}" Margin="10,0,0,0" />
                            <Entry Text="{Binding Name}" Margin="10,0,0,0" />
                            <Entry Text="{Binding Description}" Margin="10,0,0,0" />
                        </StackLayout>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>