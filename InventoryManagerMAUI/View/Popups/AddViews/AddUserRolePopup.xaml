<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="InventoryManagerMAUI.ViewModels.Popups.AddViews.AddUserRolePopup"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <ScrollView MaximumWidthRequest="250" MaximumHeightRequest="350">
        <Grid ColumnDefinitions="*,*" RowDefinitions="125,125">
            <Picker Grid.Column="0" Grid.Row="0" Title="Пользователь" Margin="10"
                    ItemsSource="{Binding CollectionUser}" 
                    ItemDisplayBinding="{Binding Username}"
                    SelectedItem="{Binding SelectedUserItem}"/>

            <Picker Grid.Column="1" Grid.Row="0" Title="Роль" Margin="10"
                    ItemsSource="{Binding CollectionRole}" 
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedRoleItem}"/>
            <Button Grid.Column="0" Grid.Row="1"  Text="Добавить" Margin="10"
                    Command="{Binding AddUserRoleCommand}"/>
            <Button Grid.Column="1" Grid.Row="1" Margin="10"  Clicked="CloseButton_Click" Style="{StaticResource WarningButtonStyle}" Text="Отмена"/>
        </Grid>
    </ScrollView>
</toolkit:Popup>